#! /bin/sh

##set -x

echo "Running 'aclocal' ..."
aclocal -I config

echo "Running 'autoheader' ..."
autoheader

##automake --foreign --add-missing --copy

echo "Running 'automake' ..."
automake --gnu --add-missing 

echo "Running 'autoconf' ..."
autoconf

## Possible alternative
## autoreconf -i

echo "done."

exit 1
